<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:c="http://www.springframework.org/schema/c" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/context 
      	http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:property-placeholder location="classpath:config.properties"
		ignore-unresolvable="true" />
	<bean id="helloWorid" class="com.privalia.presentation.HelloWorld">
		<property name="hello" value="Hola Mundo!"></property>
	</bean>
	<bean id="helloWoridConst" class="com.privalia.presentation.HelloWorld">
		<constructor-arg name="hello" index="0"
			value="Hola Mundo from constructor!" type="java.lang.String" />
	</bean>
	<bean id="helloWoridLok" class="com.privalia.presentation.lombok.HelloWorldLOK">
		<property name="hello" value="Hola Mundo!"></property>
	</bean>
	<bean id="helloWoridLokConst" class="com.privalia.presentation.lombok.HelloWorldLOK">
		<constructor-arg name="hello" index="0"
			value="Hola Mundo from constructor!" type="java.lang.String" />
	</bean>
	<bean id="student" class="com.privalia.entity.Student">
		<property name="idStudent" value="1"></property>
		<property name="name" value="Pepe"></property>
		<property name="surname" value="Soto"></property>
		<property name="age" value="24"></property>
		<property name="address">
			<ref bean="address" />
		</property>
	</bean>
	<bean id="studentConst" class="com.privalia.entity.Student">
		<constructor-arg index="0" value="${student.idstudent}"
			type="int" />
		<constructor-arg index="1" value="${student.name}"
			type="java.lang.String" />
		<constructor-arg index="2" value="${student.surname}"
			type="java.lang.String" />
		<constructor-arg index="3" value="${student.age}"
			type="int" />
		<constructor-arg name="address">
			<ref bean="address" />
		</constructor-arg>
	</bean>
	<bean id="address" class="com.privalia.entity.Address">
		<constructor-arg index="0" value="1" type="int"></constructor-arg>
		<constructor-arg index="1" value="Calle san juan"
			type="String"></constructor-arg>
	</bean>

	<bean id="teacher1" class="com.privalia.entity.listas.Teacher">
		<property name="idTeacher" value="1"></property>
		<property name="name" value="Pepe"></property>
	</bean>

	<bean id="teacher2" class="com.privalia.entity.listas.Teacher">
		<property name="idTeacher" value="2"></property>
		<property name="name" value="Juan"></property>
	</bean>

	<bean id="david3Student" class="com.privalia.entity.listas.Student">
		<property name="idStudent" value="1"></property>
		<property name="name" value="David"></property>
		<property name="surname" value="Soto"></property>
		<property name="age" value="24"></property>
		<property name="listTeacher">
			<list>
				<ref bean="teacher1" />
				<ref bean="teacher2" />
			</list>
		</property>
	</bean>
	<bean id="builder" class="com.privalia.builder.example.Employee$EmployeeBuilder">
		<constructor-arg value="1" />
		<constructor-arg value="Shamik" />
		<property name="gender" value="1" />
		<property name="hobby" value="Blogging" />
	</bean>
	<bean id="employee" class="com.privalia.builder.example.Employee"
		factory-bean="builder" factory-method="build" />

	<bean id="compra" class="com.privalia.aspectos.Comprar"></bean>
	<bean id="validarCompra" class="com.privalia.aspectos.ValidarMaterial"></bean>

	<aop:config>
		<aop:aspect ref="validarCompra">
			<aop:pointcut
				expression="execution( * com.privalia.aspectos.Comprar.compra(..) )"
				id="compraPoitCut" />
			<aop:before method="comprobarCantidad" pointcut-ref="compraPoitCut" />

			<aop:after-returning method="empaquetar"
				pointcut-ref="compraPoitCut" />

			<aop:after-throwing method="ponerReclamacion"
				pointcut-ref="compraPoitCut" />

		</aop:aspect>
	</aop:config>

</beans>